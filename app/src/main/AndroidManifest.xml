<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bryan.cabingameslist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/cabin_logo_gold_for_mobile"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".GameListView_Activity"
            android:parentActivityName=".HomePage_Activity" />
        <activity
            android:name=".GameDetailPage_Activity"
            android:parentActivityName=".GameListView_Activity" />
        <activity android:name=".HomePage_Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".VideoPlayer_Activity" />
        <activity android:name=".VideoListView_Activity"
            android:parentActivityName=".HomePage_Activity">

        </activity>
    </application>

</manifest>