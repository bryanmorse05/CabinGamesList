<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameDetailPage_Activity">

    <ImageView
        android:id="@+id/heroImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/detailDescriptionText"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textAlignment="center"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/heroImage"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/detailTutorialButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/tutorial"
        android:background="@drawable/buttonshape"
        android:textColor="@color/colorGold"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/detailDescriptionText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/detailManualButton"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/detailManualButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/manual"
        android:background="@drawable/buttonshape"
        android:textColor="@color/colorGold"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/detailDescriptionText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/detailTutorialButton"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>